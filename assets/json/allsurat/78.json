    },
    "ayat": [
      {
        "nomorAyat": 1,
        "teksArab": "عَمَّ يَتَسَاۤءَلُوْنَۚ ",
        "teksIndonesia": "Tentang apakah mereka saling bertanya-tanya?",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078001.mp3"
        }
      },
      {
        "nomorAyat": 2,
        "teksArab": "عَنِ النَّبَاِ الْعَظِيْمِۙ ",
        "teksIndonesia": "Tentang berita yang besar (hari kebangkitan),",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078002.mp3"
        }
      },
      {
        "nomorAyat": 3,
        "teksArab": "الَّذِيْ هُمْ فِيْهِ مُخْتَلِفُوْنَۗ ",
        "teksIndonesia": "yang dalam hal itu mereka berselisih.",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078003.mp3"
        }
      },
      {
        "nomorAyat": 4,
        "teksArab": "كَلَّا سَيَعْلَمُوْنَۙ ",
        "teksIndonesia": "Tidak! Kelak mereka akan mengetahui,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078004.mp3"
        }
      },
      {
        "nomorAyat": 5,
        "teksArab": "ثُمَّ كَلَّا سَيَعْلَمُوْنَ",
        "teksIndonesia": "sekali lagi tidak! Kelak mereka akan mengetahui. ",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078005.mp3"
        }
      },
      {
        "nomorAyat": 6,
        "teksArab": "اَلَمْ نَجْعَلِ الْاَرْضَ مِهٰدًاۙ",
        "teksIndonesia": "Bukankah Kami telah menjadikan bumi sebagai hamparan, ",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078006.mp3"
        }
      },
      {
        "nomorAyat": 7,
        "teksArab": "وَّالْجِبَالَ اَوْتَادًاۖ",
        "teksIndonesia": "dan gunung-gunung sebagai pasak?",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078007.mp3"
        }
      },
      {
        "nomorAyat": 8,
        "teksArab": "وَّخَلَقْنٰكُمْ اَزْوَاجًاۙ ",
        "teksIndonesia": "Dan Kami menciptakan kamu berpasang-pasangan,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078008.mp3"
        }
      },
      {
        "nomorAyat": 9,
        "teksArab": "وَّجَعَلْنَا نَوْمَكُمْ سُبَاتًاۙ ",
        "teksIndonesia": "dan Kami menjadikan tidurmu untuk istirahat,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078009.mp3"
        }
      },
      {
        "nomorAyat": 10,
        "teksArab": "وَّجَعَلْنَا الَّيْلَ لِبَاسًاۙ ",
        "teksIndonesia": "dan Kami menjadikan malam sebagai pakaian,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078010.mp3"
        }
      },
      {
        "nomorAyat": 11,
        "teksArab": "وَّجَعَلْنَا النَّهَارَ مَعَاشًاۚ",
        "teksIndonesia": "dan Kami menjadikan siang untuk mencari penghidupan,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078011.mp3"
        }
      },
      {
        "nomorAyat": 12,
        "teksArab": "وَبَنَيْنَا فَوْقَكُمْ سَبْعًا شِدَادًاۙ ",
        "teksIndonesia": "dan Kami membangun di atas kamu tujuh (langit) yang kokoh,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078012.mp3"
        }
      },
      {
        "nomorAyat": 13,
        "teksArab": "وَّجَعَلْنَا سِرَاجًا وَّهَّاجًاۖ",
        "teksIndonesia": "dan Kami menjadikan pelita yang terang-benderang (matahari),",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078013.mp3"
        }
      },
      {
        "nomorAyat": 14,
        "teksArab": "وَّاَنْزَلْنَا مِنَ الْمُعْصِرٰتِ مَاۤءً ثَجَّاجًاۙ",
        "teksIndonesia": "dan Kami turunkan dari awan, air hujan yang tercurah dengan hebatnya,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078014.mp3"
        }
      },
      {
        "nomorAyat": 15,
        "teksArab": "لِّنُخْرِجَ بِهٖ حَبًّا وَّنَبَاتًاۙ",
        "teksIndonesia": "untuk Kami tumbuhkan dengan air itu biji-bijian dan tanam-tanaman,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078015.mp3"
        }
      },
      {
        "nomorAyat": 16,
        "teksArab": "وَّجَنّٰتٍ اَلْفَافًاۗ",
        "teksIndonesia": "dan kebun-kebun yang rindang.",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078016.mp3"
        }
      },
      {
        "nomorAyat": 17,
        "teksArab": "اِنَّ يَوْمَ الْفَصْلِ كَانَ مِيْقَاتًاۙ",
        "teksIndonesia": "Sungguh, hari keputusan adalah suatu waktu yang telah ditetapkan,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078017.mp3"
        }
      },
      {
        "nomorAyat": 18,
        "teksArab": "يَّوْمَ يُنْفَخُ فِى الصُّوْرِ فَتَأْتُوْنَ اَفْوَاجًاۙ",
        "teksIndonesia": "(yaitu) pada hari (ketika) sangkakala ditiup, lalu kamu datang berbondong-bondong,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078018.mp3"
        }
      },
      {
        "nomorAyat": 19,
        "teksArab": "وَّفُتِحَتِ السَّمَاۤءُ فَكَانَتْ اَبْوَابًاۙ",
        "teksIndonesia": "dan langit pun dibukalah, maka terdapatlah beberapa pintu,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078019.mp3"
        }
      },
      {
        "nomorAyat": 20,
        "teksArab": "وَّسُيِّرَتِ الْجِبَالُ فَكَانَتْ سَرَابًاۗ",
        "teksIndonesia": "dan gunung-gunung pun dijalankan sehingga menjadi fatamorgana.",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078020.mp3"
        }
      },
      {
        "nomorAyat": 21,
        "teksArab": "اِنَّ جَهَنَّمَ كَانَتْ مِرْصَادًاۙ",
        "teksIndonesia": "Sungguh, (neraka) Jahanam itu (sebagai) tempat mengintai (bagi penjaga yang mengawasi isi neraka), ",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078021.mp3"
        }
      },
      {
        "nomorAyat": 22,
        "teksArab": "لِّلطّٰغِيْنَ مَاٰبًاۙ",
        "teksIndonesia": "menjadi tempat kembali bagi orang-orang yang melampaui batas.",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078022.mp3"
        }
      },
      {
        "nomorAyat": 23,
        "teksArab": "لّٰبِثِيْنَ فِيْهَآ اَحْقَابًاۚ",
        "teksIndonesia": "Mereka tinggal di sana dalam masa yang lama,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078023.mp3"
        }
      },
      {
        "nomorAyat": 24,
        "teksArab": "لَا يَذُوْقُوْنَ فِيْهَا بَرْدًا وَّلَا شَرَابًاۙ",
        "teksIndonesia": "mereka tidak merasakan kesejukan di dalamnya dan tidak (pula mendapat) minuman,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078024.mp3"
        }
      },
      {
        "nomorAyat": 25,
        "teksArab": "اِلَّا حَمِيْمًا وَّغَسَّاقًاۙ",
        "teksIndonesia": "selain air yang mendidih dan nanah,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078025.mp3"
        }
      },
      {
        "nomorAyat": 26,
        "teksArab": "جَزَاۤءً وِّفَاقًاۗ",
        "teksIndonesia": "sebagai pembalasan yang setimpal.",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078026.mp3"
        }
      },
      {
        "nomorAyat": 27,
        "teksArab": "اِنَّهُمْ كَانُوْا لَا يَرْجُوْنَ حِسَابًاۙ",
        "teksIndonesia": "Sesungguhnya dahulu mereka tidak pernah mengharapkan perhitungan.",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078027.mp3"
        }
      },
      {
        "nomorAyat": 28,
        "teksArab": "وَّكَذَّبُوْا بِاٰيٰتِنَا كِذَّابًاۗ",
        "teksIndonesia": "Dan mereka benar-benar mendustakan ayat-ayat Kami.",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078028.mp3"
        }
      },
      {
        "nomorAyat": 29,
        "teksArab": "وَكُلَّ شَيْءٍ اَحْصَيْنٰهُ كِتٰبًاۙ",
        "teksIndonesia": "Dan segala sesuatu telah Kami catat dalam suatu Kitab (buku catatan amalan manusia). ",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078029.mp3"
        }
      },
      {
        "nomorAyat": 30,
        "teksArab": "فَذُوْقُوْا فَلَنْ نَّزِيْدَكُمْ اِلَّا عَذَابًا ࣖ",
        "teksIndonesia": "Maka karena itu rasakanlah! Maka tidak ada yang akan Kami tambahkan kepadamu selain azab.",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078030.mp3"
        }
      },
      {
        "nomorAyat": 31,
        "teksArab": "اِنَّ لِلْمُتَّقِيْنَ مَفَازًاۙ",
        "teksIndonesia": "Sungguh, orang-orang yang bertakwa mendapat kemenangan,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078031.mp3"
        }
      },
      {
        "nomorAyat": 32,
        "teksArab": "حَدَاۤىِٕقَ وَاَعْنَابًاۙ",
        "teksIndonesia": "(yaitu) kebun-kebun dan buah anggur,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078032.mp3"
        }
      },
      {
        "nomorAyat": 33,
        "teksArab": "وَّكَوَاعِبَ اَتْرَابًاۙ",
        "teksIndonesia": "dan gadis-gadis montok yang sebaya,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078033.mp3"
        }
      },
      {
        "nomorAyat": 34,
        "teksArab": "وَّكَأْسًا دِهَاقًاۗ",
        "teksIndonesia": "dan gelas-gelas yang penuh (berisi minuman).",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078034.mp3"
        }
      },
      {
        "nomorAyat": 35,
        "teksArab": "لَا يَسْمَعُوْنَ فِيْهَا لَغْوًا وَّلَا كِذّٰبًا",
        "teksIndonesia": "Di sana mereka tidak mendengar percakapan yang sia-sia maupun (perkataan) dusta.",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078035.mp3"
        }
      },
      {
        "nomorAyat": 36,
        "teksArab": "جَزَاۤءً مِّنْ رَّبِّكَ عَطَاۤءً حِسَابًاۙ",
        "teksIndonesia": "Sebagai balasan dan pemberian yang cukup banyak dari Tuhanmu,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078036.mp3"
        }
      },
      {
        "nomorAyat": 37,
        "teksArab": "رَّبِّ السَّمٰوٰتِ وَالْاَرْضِ وَمَا بَيْنَهُمَا الرَّحْمٰنِ لَا يَمْلِكُوْنَ مِنْهُ خِطَابًاۚ ",
        "teksIndonesia": "Tuhan (yang memelihara) langit dan bumi dan apa yang ada di antara keduanya; Yang Maha Pengasih, mereka tidak mampu berbicara dengan Dia.",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078037.mp3"
        }
      },
      {
        "nomorAyat": 38,
        "teksArab": "يَوْمَ يَقُوْمُ الرُّوْحُ وَالْمَلٰۤىِٕكَةُ صَفًّاۙ  لَّا يَتَكَلَّمُوْنَ اِلَّا مَنْ اَذِنَ لَهُ الرَّحْمٰنُ وَقَالَ صَوَابًا",
        "teksIndonesia": "Pada hari, ketika ruh dan para malaikat berdiri bersaf-saf, mereka tidak berkata-kata, kecuali siapa yang telah diberi izin kepadanya oleh Tuhan Yang Maha Pengasih dan dia hanya mengatakan yang benar.",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078038.mp3"
        }
      },
      {
        "nomorAyat": 39,
        "teksArab": "ذٰلِكَ الْيَوْمُ الْحَقُّۚ فَمَنْ شَاۤءَ اتَّخَذَ اِلٰى رَبِّهٖ مَاٰبًا",
        "teksIndonesia": "Itulah hari yang pasti terjadi. Maka barang siapa menghendaki, niscaya dia menempuh jalan kembali kepada Tuhannya.",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078039.mp3"
        }
      },
      {
        "nomorAyat": 40,
        "teksArab": "اِنَّآ اَنْذَرْنٰكُمْ عَذَابًا قَرِيْبًا ەۙ يَّوْمَ يَنْظُرُ الْمَرْءُ مَا قَدَّمَتْ يَدَاهُ وَيَقُوْلُ الْكٰفِرُ يٰلَيْتَنِيْ كُنْتُ تُرٰبًا ࣖ",
        "teksIndonesia": "Sesungguhnya Kami telah memperingatkan kepadamu (orang kafir) azab yang dekat, pada hari manusia melihat apa yang telah diperbuat oleh kedua tangannya; dan orang kafir berkata, “Alangkah baiknya seandainya dahulu aku jadi tanah.”",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/078040.mp3"
        }
      }
    ],
