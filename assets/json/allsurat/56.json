        "teksArab": "وَّبُسَّتِ الْجِبَالُ بَسًّاۙ  ",
        "teksIndonesia": "dan gunung-gunung dihancurluluhkan sehancur-hancurnya,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/056005.mp3"
        }
      },
      {
        "nomorAyat": 6,
        "teksArab": "فَكَانَتْ هَبَاۤءً مُّنْۢبَثًّاۙ ",
        "teksIndonesia": "maka jadilah ia debu yang beterbangan,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/056006.mp3"
        }
      },
      {
        "nomorAyat": 7,
        "teksArab": "وَّكُنْتُمْ اَزْوَاجًا ثَلٰثَةً ۗ",
        "teksIndonesia": "dan kamu menjadi tiga golongan,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/056007.mp3"
        }
      },
      {
        "nomorAyat": 8,
        "teksArab": "فَاَصْحٰبُ الْمَيْمَنَةِ ەۙ مَآ اَصْحٰبُ الْمَيْمَنَةِ ۗ",
        "teksIndonesia": "yaitu golongan kanan, alangkah mulianya golongan kanan itu,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/056008.mp3"
        }
      },
      {
        "nomorAyat": 9,
        "teksArab": "وَاَصْحٰبُ الْمَشْـَٔمَةِ ەۙ مَآ اَصْحٰبُ الْمَشْـَٔمَةِ ۗ",
        "teksIndonesia": "dan golongan kiri, alangkah sengsaranya golongan kiri itu,",
        "audio": {
          "05": "https://equran.nos.wjv-1.neo.id/audio-partial/Misyari-Rasyid-Al-Afasi/056009.mp3"
        }
      },
      {
